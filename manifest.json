{
  "manifest_version": 3,
  "name": "TruthCart",
  "description": "See the truth before you add to cart â€” Trust Scores and real-user quotes.",
  "version": "0.2.0",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*/"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TruthCart Analysis",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.*/*",
        "*://*.aliexpress.*/*",
        "*://*.daraz.*/*",
        "*://*/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}